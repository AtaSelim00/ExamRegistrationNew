@model List<Student>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Student Listt
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New Student

            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>StudentNo</th>
                <th>Name</th>
                <th>Surname</th>
                <th>ClassNo</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.StudentNo</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.ClassNo</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-dark mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>  