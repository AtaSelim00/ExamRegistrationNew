@model Examm


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Exam</h2>
            </div>
        </div>
    </div>
 
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 w-100">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="LessonCode" class="form-control border-0 shadow" />
                    <label asp-for="LessonCode" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="StudentNo" class="form-control border-0 shadow" />
                    <label asp-for="StudentNo" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ExamDate" class="form-control border-0 shadow" />
                    <label asp-for="ExamDate" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Point" class="form-control border-0 shadow" />
                    <label asp-for="Point" class="ms-2"></label>

                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Exam" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>


